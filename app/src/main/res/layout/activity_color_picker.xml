<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDB7B7"
    tools:context=".color_picker.ColorPickerActivity">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_92sdp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img" />

        <ImageView
            android:id="@+id/ivPicker"
            android:layout_width="@dimen/_148sdp"
            android:layout_height="@dimen/_148sdp"
            android:padding="@dimen/_15sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/thumb_color_picker"
            android:visibility="gone"
            tools:visibility="gone" />
    </FrameLayout>


    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ivColor"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>